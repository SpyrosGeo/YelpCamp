<% include ../partials/header %>
<div class="container">
<div class="row">
  <div class="col-md-3">
    <p class="lead">TrashCamp</p>
    <div class="list-group">
      <li class="list-group-item active">info 1</li>
      <li class="list-group-item">info 2</li>
      <li class="list-group-item">info 3</li>

    </div>
  </div>
  <div class="col-md-9 mt-1">
    <div class="card text-white bg-dark mb-3">
      <img src="<%= campground.image%>" class="card-img-top">
    <div class="card-body">
      <p class="float-right">$9.00/night</p>
      <h4 class="card-title "><a><%= campground.name %></a></h4>
      <hr>
      <p class="card-text"><%= campground.description %></p>

      <!-- <a href="/campgrounds"class="btn btn-outline-success inline">Go Back</a> -->
    </div>

  </div>
  <div class="card text-white bg-dark">
    <div class="card-body">
        <div class="text-right">
          <a href="/campgrounds/<%= campground._id %>/comments/new"class="btn btn-outline-success inline">Leave a Review </a>
        </div>
        <hr>
        <div class="row">
          <% campground.comments.forEach(function(comment){ %>
            <div class="col-md-12 mb-2">
              <div class="card text-white bg-dark border-success">
                <div class="card-body">
                  <span class="float-right text-white ">10 days ago</span>
                  <div class="float-left">
                    <p class="card-title"><strong><%= comment.author.username %></strong></p>

                    <p class="card-text"><%=comment.text %></p>
                  </div>
                </div>
              </div>
            </div>
            <% }); %>
        </div>
    </div>
  </div>
  </div>

</div>




</div>
<% include ../partials/footer %>
