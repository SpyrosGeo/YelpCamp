<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/">YelpCamp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/campgrounds">Home <span class="sr-only">(current)</span></a>
        </li>
      </ul>
      <ul class="nav navbar-nav">
        <%  if(!currentUser){ %>
        <li><a href="/login" class="nav-link  my-2 my-sm-0 mx-1">Login</a></li>
        <li><a href="/register"class="nav-link my-2 my-sm-0 mx-1">Sign Up</a></li>
          <% }else{%>
        <li><a href="#" class="nav-link my-sm-0 mx-1 active" ><%= currentUser.username %></a></li>
        <li><a href="/logout"class="nav-link my-2 my-sm-0 mx-1">Logout</a></li>
      <% } %>
        </ul>
    </div>
  </nav>
